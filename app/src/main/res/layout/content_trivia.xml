<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fillViewport="true"
    tools:context="io.github.iamutkarshtiwari.trivia.Trivia"
    tools:ignore="NestedWeights">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="160dp"
            android:background="@color/whiteGray">

        </LinearLayout>



        <RelativeLayout
            android:id="@+id/question_panel"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:elevation="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/questions_bg">

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/category_bg"
                android:padding="8dp"
                android:text="Category" />

            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/category"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:text="Hello this is the question?"
                android:textAlignment="center"
                android:textColor="@color/textBlack"
                android:textSize="16sp" />

        </RelativeLayout>


        <TableLayout
            android:id="@+id/option_grid"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:elevation="2dp"
            android:layout_below="@id/question_panel">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:padding="2dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/option1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/option1"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:background="@drawable/questions_bg"/>

                <Button
                    android:id="@+id/option2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    android:text="@string/option2"
                    android:background="@drawable/questions_bg" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:clipToPadding="false"
                android:padding="2dp">

                <Button
                    android:id="@+id/option3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:text="@string/option3"
                    android:textSize="16sp"
                    android:background="@drawable/questions_bg"/>

                <Button
                    android:id="@+id/option4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:layout_marginLeft="8dp"
                    android:text="@string/option4"
                    android:textSize="16sp"
                    android:background="@drawable/questions_bg"/>
            </TableRow>

        </TableLayout>

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/spinner"
            android:layout_width="50dp"
            android:layout_height="50dp"
            style="@style/AVLoadingIndicatorView.Small"
            android:visibility="visible"
            android:elevation="2dp"
            app:indicatorName="LineSpinFadeLoaderIndicator"
            app:indicatorColor="@color/black"
            android:layout_marginTop="64dp"
            android:layout_below="@id/question_panel"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/option_panel"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/background_with_shadow"
            android:layout_alignParentBottom="true"
            android:clipToPadding="false"
            android:elevation="2dp"
            android:paddingTop="2dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/next_question"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/firstOption"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:src="@drawable/next" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:gravity="center_horizontal"
                    android:text="@string/next_question"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/remove_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/secondOption"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:src="@drawable/puzzle" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/remove_one"
                    android:clickable="false"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/_15_seconds"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/thirdOption"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:src="@drawable/extra_secs" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/_15_seconds"
                    android:clickable="false"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</ScrollView>